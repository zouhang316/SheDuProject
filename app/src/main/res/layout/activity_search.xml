<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/shape_gradient_toolbar">
            <EditText
                android:id="@+id/searchview"
                android:layout_width="280dp"
                android:layout_height="30dp"
                android:drawableLeft="@mipmap/ic_search"
                android:hint="搜索工种、团队"
                android:paddingLeft="8dp"
                android:drawablePadding="8dp"
                android:textColorHint="@color/wihte"
                android:textColor="@color/wihte"
                android:background="@drawable/shape_searchview"
                android:textCursorDrawable="@drawable/cursor_color"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/search_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                android:textColor="@color/wihte"
                android:textSize="16sp"
                android:text="取消"/>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#F4F4F4"/>
    <TextView
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="热门工作"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/backgroundColor"/>

    <GridView
        android:id="@+id/hotjob_gv"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="15dp"
        android:columnWidth="10dp"
        android:numColumns="5"
        android:stretchMode="columnWidth" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#F4F4F4"/>
    <TextView
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="搜索历史"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/backgroundColor"/>

    <GridView
        android:id="@+id/history_gv"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="15dp"
        android:columnWidth="10dp"
        android:numColumns="5"
        android:stretchMode="columnWidth" />



</LinearLayout>