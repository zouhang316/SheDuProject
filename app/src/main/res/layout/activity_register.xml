<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/loginbackground">
    <ImageView
        android:id="@+id/back"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/back"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="158dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_loginbg"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edit_phone"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textCursorDrawable="@drawable/cursor_color"
            style="@style/Text_Login_Style"
            android:paddingLeft="10dp"
            android:textColorHint="@color/wihte"
            android:hint="请输入您的手机号"
            android:inputType="phone"
            android:background="@null"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:background="@color/wihte"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_code"
                style="@style/Text_Login_Style"
                android:textCursorDrawable="@drawable/cursor_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入手机验证码"
                android:inputType="number"
                android:textColorHint="@color/wihte" />

            <com.beenvip.shedu.utils.TimeButton
                android:id="@+id/getcode"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="30dp"
                style="@style/Text_Login_Style"
                android:background="@null"
                android:text="获取验证码"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:background="@color/wihte"/>

        <EditText
            android:id="@+id/edit_pwd"
            style="@style/Text_Login_Style"
            android:textCursorDrawable="@drawable/cursor_color"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColorHint="@color/wihte" />
    </LinearLayout>

    <Button
        android:id="@+id/regsiter"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_loginbutton"
        android:text="立即注册"
        android:textColor="#1F1205"
        android:textSize="18sp" />


</LinearLayout>