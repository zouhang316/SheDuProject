<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">
        <RelativeLayout
            style="@style/WageRelativeLayoutStyle">
            <TextView
                style="@style/WageFontStyle"
                android:text="项目名称"/>
            <TextView
                style="@style/ProjectDetailsTextFont"
                android:layout_alignParentRight="true"
                android:text="弘德西街开发二期"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/line"/>
        <RelativeLayout
            style="@style/WageRelativeLayoutStyle">
            <TextView
                style="@style/WageFontStyle"
                android:text="公司名称"/>
            <TextView
                style="@style/ProjectDetailsTextFont"
                android:layout_alignParentRight="true"
                android:text="沙坪集团"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="15dp"
            android:text="甲方"
            android:textSize="17sp"
            android:gravity="center_vertical" />
        <RelativeLayout
            style="@style/WageRelativeLayoutStyle">
            <TextView
                style="@style/WageFontStyle"
                android:text="发工资方"/>
            <TextView
                style="@style/ProjectDetailsTextFont"
                android:layout_alignParentRight="true"
                android:text="美德班组"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/line"/>
        <RelativeLayout
            style="@style/WageRelativeLayoutStyle">
            <TextView
                style="@style/WageFontStyle"
                android:text="联系电话"/>
            <TextView
                style="@style/ProjectDetailsTextFont"
                android:layout_alignParentRight="true"
                android:text="13888888888"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="15dp"
            android:text="乙方"
            android:textSize="17sp"
            android:gravity="center_vertical" />

        <RelativeLayout style="@style/WageRelativeLayoutStyle">

            <TextView
                style="@style/WageFontStyle"
                android:text="领工资方" />

            <TextView
                style="@style/ProjectDetailsTextFont"
                android:layout_alignParentRight="true"
                android:text="张家" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/line"/>
        <RelativeLayout
            style="@style/WageRelativeLayoutStyle">
            <TextView
                style="@style/WageFontStyle"
                android:text="联系电话"/>
            <TextView
                style="@style/ProjectDetailsTextFont"
                android:layout_alignParentRight="true"
                android:text="13888888888"/>
        </RelativeLayout>
        <RelativeLayout
            style="@style/WageRelativeLayoutStyle">
            <TextView
                style="@style/WageFontStyle"
                android:text="部门/班组"/>
            <TextView
                style="@style/ProjectDetailsTextFont"
                android:layout_alignParentRight="true"
                android:text="美德班组"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/line"/>
        <RelativeLayout
            style="@style/WageRelativeLayoutStyle">
            <TextView
                style="@style/WageFontStyle"
                android:text="工种"/>
            <TextView
                style="@style/ProjectDetailsTextFont"
                android:layout_alignParentRight="true"
                android:text="木工"/>
        </RelativeLayout>
        <RelativeLayout
            style="@style/WageRelativeLayoutStyle">
            <TextView
                style="@style/WageFontStyle"
                android:text="工资方式"/>
            <TextView
                style="@style/ProjectDetailsTextFont"
                android:layout_alignParentRight="true"
                android:text="月结"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/line"/>
        <RelativeLayout
            style="@style/WageRelativeLayoutStyle">
            <TextView
                style="@style/WageFontStyle"
                android:text="备注"/>
            <TextView
                style="@style/WageFontStyle"
                android:layout_alignParentRight="true"
                android:text=""/>
        </RelativeLayout>

        <Button
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_loginbutton"
            android:textColor="@color/wihte"
            android:textSize="18sp"
            android:text="申请托管"/>

    </LinearLayout>

</ScrollView>