<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout style="@style/WageRelativeLayoutStyle">
        <TextView
            style="@style/WageFontStyle"
            android:text="姓名" />

        <EditText
            style="@style/ProjectDetailsTextFont"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="right"
            android:hint="身份证姓名"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        style="@style/MarginLine"/>
    <RelativeLayout
        style="@style/WageRelativeLayoutStyle">
        <TextView
            style="@style/WageFontStyle"
            android:text="证件号码"/>
        <EditText
            android:layout_alignParentRight="true"
            android:background="@null"
            style="@style/ProjectDetailsTextFont"
            android:textSize="15sp"
            android:gravity="right"
            android:hint="身份证号码"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#F5F5F5"/>
    <RelativeLayout
        style="@style/WageRelativeLayoutStyle">
        <TextView
            style="@style/WageFontStyle"
            android:text="上传资质证书"/>
    </RelativeLayout>
    <TextView
        style="@style/MarginLine"/>
    <LinearLayout
        android:background="@color/wihte"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/idcard_zm"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/add_idcard" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传身份证正面照" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/ic_idcard"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证正面照示例" />

        </LinearLayout>
    </LinearLayout>
    <TextView
        style="@style/MarginLine"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_loginbutton"
        android:text="添加技能"
        android:textColor="@color/wihte"
        android:textSize="17sp" />
</LinearLayout>