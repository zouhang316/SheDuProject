<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/test"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/item_title"
            android:layout_alignTop="@+id/head"
            android:layout_toRightOf="@+id/head"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#333333"
            android:text="急需5台挖机"/>
        <TextView
            android:id="@+id/item_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/item_title3"
            android:layout_alignLeft="@+id/item_title"
            android:layout_marginBottom="3dp"
            android:textSize="13sp"
            android:text="可包工、可月租"/>

        <TextView

            android:layout_alignBottom="@+id/head"
            android:layout_alignLeft="@+id/item_title"
            android:id="@+id/item_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="智慧社区项目部"
            android:textColor="#666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#666666"
            android:text="长沙市  5分钟前"
            android:layout_alignBottom="@+id/head"
            android:layout_alignParentRight="true" />



</RelativeLayout>