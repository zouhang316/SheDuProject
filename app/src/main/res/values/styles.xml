<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginTheme" parent="AppTheme">
    </style>

    <style name="Splash_Style" parent="AppTheme">
        <item name="android:background">@mipmap/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="Text_Login_Style">
        <item name="android:textColor">@color/wihte</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tab_main_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/tab_main_botton_text_color</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@color/wihte</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapContent.WidthMatchParent">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="WrapContent.HeightMatchParent">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Toolbar_TextAppearance_White">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="WageFontStyle">
        <item name="android:textColor">#101010</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="WageRelativeLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@color/wihte</item>
    </style>
    <style name="ProjectDetailsTextFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="IndexRadioButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/radiobuttonTextColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/shape_rbt_presed_color</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="MarginLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@color/line</item>
    </style>
    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/line</item>
    </style>


</resources>
